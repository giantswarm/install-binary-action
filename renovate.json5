{
  "extends": [
    "github>giantswarm/renovate-presets:default.json5",
    "github>giantswarm/renovate-presets:disable-ansible.json5",
    "github>giantswarm/renovate-presets:disable-kustomize.json5",
    "group:allNonMajor"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "node",
      ],
      "groupName": "node",
    },
    {
      "excludePackageNames": [
        "typescript",
      ],
      "matchPackagePatterns": [
        "eslint",
      ],
      "groupName": "eslint",
    },
    {
      "matchPackageNames": [
        "typescript",
      ],
      "groupName": "typescript",
    },
    {
      "excludePackageNames": [
        "typescript",
      ],
      "excludePackagePatterns": [
        "eslint",
      ],
      "matchDepTypes": ["dependencies"],
      "groupName": "JS dependencies",
    },
    {
      "fileMatch": [
        // Copied from https://docs.renovatebot.com/modules/manager/github-actions/#file-matching
        "(^|/)(workflow-templates|\\.(?:github|gitea|forgejo)/(?:workflows|actions))/.+\\.ya?ml$",
        "(^|/)action\\.ya?ml$"
      ],
      "groupName": "GitHub Actions dependencies",
    },
  ],
}
